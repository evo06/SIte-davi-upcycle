<style>
  .footer {
    background-color: #111;
    color: white;
    padding: 4rem 0 2rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .footer-logo h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  
  .footer-logo-img {
      max-width: 150px;
      height: auto;
      margin-bottom: 1rem;
    }
    
    .footer-logo p {
      opacity: 0.7;
    }
  
  .footer-links h4,
  .footer-newsletter h4 {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 0.5rem;
  }
  
  .footer-links h4::after,
  .footer-newsletter h4::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 2px;
    background-color: white;
  }
  
  .footer-links ul {
    list-style: none;
  }
  
  .footer-links li {
    margin-bottom: 0.8rem;
  }
  
  .footer-links a {
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .footer-links a:hover {
    opacity: 1;
  }
  
  .footer-newsletter p {
    margin-bottom: 1.5rem;
    opacity: 0.7;
  }
  
  .instagram-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem 1.2rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    transition: all 0.6s ease;
    color: white;
    text-decoration: none;
    width: fit-content;
  }
  
  .instagram-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }
  
  .instagram-handle {
    font-size: 1.1rem;
    font-weight: 500;
  }
  
  .instagram-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .instagram-icon svg {
    width: 20px;
    height: 20px;
  }
  
  .newsletter-form {
    display: flex;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 0.8rem;
    border: none;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    font-family: var(--font-family);
  }
  
  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .btn-newsletter {
    padding: 0 1.5rem;
    background-color: white;
    color: black;
    border: none;
    cursor: pointer;
    font-family: var(--font-family);
    font-weight: 500;
    transition: background-color 0.3s ease;
  }
  
  .btn-newsletter:hover {
    background-color: #ddd;
  }
  
  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-bottom p {
    opacity: 0.7;
    font-size: 0.9rem;
  }
  
  .footer-bottom-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .footer-bottom-links a {
    opacity: 0.7;
    font-size: 0.9rem;
    transition: opacity 0.3s ease;
  }
  
  .footer-bottom-links a:hover {
    opacity: 1;
  }
  
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>