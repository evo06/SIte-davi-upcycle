<style>
  .parceiros {
    background-color: #f9f9f9;
  }
  
  .parceiros-slider {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
    margin: 3rem 0;
  }
  
  .parceiro-item {
    flex: 0 0 150px;
    width: 150px;
    height: 150px;
    padding: 1rem;
    background-color: white;
    border-radius: 50%;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    overflow: hidden;
    border: 2px solid #f0f0f0;
  }
  
  .parceiro-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }
  
  .parceiro-item img {
    max-width: 70%;
    height: auto;
    max-height: 70%;
    object-fit: contain;
  }
  
  .depoimentos {
    margin-top: 4rem;
  }
  
  .depoimento {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .depoimento-texto {
    font-style: italic;
    position: relative;
  }
  
  .depoimento-texto p {
    position: relative;
    z-index: 1;
  }
  
  .depoimento-autor {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  
  .autor-img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid white;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  
  .autor-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .autor-info h4 {
    margin: 0 0 0.3rem;
    font-size: 1.1rem;
  }
  
  .autor-info p {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.7;
  }
  
  @media (max-width: 768px) {
    .parceiros-slider {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      justify-content: center;
      justify-items: center;
      width: 100%;
    }
    
    .parceiro-item {
      flex: none;
      width: 100px;
      height: 100px;
      min-width: unset;
      max-width: unset;
      margin: 0 auto;
      padding: 0.8rem;
    }
    
    .parceiro-item img {
      max-width: 65%;
      max-height: 65%;
    }
  }
</style>

<script>
  // Script para criar um carrossel infinito que mostra todos os parceiros
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.parceiros-slider');
    
    if (slider && window.innerWidth <= 768) {
      let scrollAmount = 0;
      const scrollMax = slider.scrollWidth - slider.clientWidth;
      const scrollStep = 1;
      const scrollInterval = 30;
      
      let autoScroll = setInterval(() => {
        slider.scrollLeft += scrollStep;
        scrollAmount += scrollStep;
        
        // Quando chegar ao final, volte ao início suavemente
        if (slider.scrollLeft >= scrollMax) {
          // Reinicia o scroll suavemente
          scrollAmount = 0;
          slider.scrollLeft = 0;
        }
      }, scrollInterval);
      
      // Pausa a animação quando o usuário interage
      slider.addEventListener('mouseenter', () => {
        clearInterval(autoScroll);
      });
      
      slider.addEventListener('touchstart', () => {
        clearInterval(autoScroll);
      }, { passive: true });
      
      // Reinicia a animação quando o usuário para de interagir
      slider.addEventListener('mouseleave', () => {
        scrollAmount = slider.scrollLeft;
        
        autoScroll = setInterval(() => {
          slider.scrollLeft += scrollStep;
          scrollAmount += scrollStep;
          
          if (slider.scrollLeft >= scrollMax) {
            scrollAmount = 0;
            slider.scrollLeft = 0;
          }
        }, scrollInterval);
      });
      
      slider.addEventListener('touchend', () => {
        scrollAmount = slider.scrollLeft;
        
        autoScroll = setInterval(() => {
          slider.scrollLeft += scrollStep;
          scrollAmount += scrollStep;
          
          if (slider.scrollLeft >= scrollMax) {
            scrollAmount = 0;
            slider.scrollLeft = 0;
          }
        }, scrollInterval);
      });
    }
  });
</script>